<div id="report_card">
    <h1 class="h1_white">CREATE A NEW REPORT</h1>

<%= form_for @report do |f| %> 
    <table width="600">
        <tr height="45">
            <td class="pad_5 profile_label"><%= f.label :title %></td>
            <td class="pad_5 profile_label"><%= f.text_field :title, id: "formbox_width" %></td>
        </tr>
        <tr height="45">
            <td class="pad_5 profile_label"><%= f.label :body %></td>
            <td class="pad_5 profile_label"><%= f.text_field :body, id: "formbox_width" %></td>
        </tr>
    </table>
    <%= f.fields_for :markers do |marker| %>
        <table width="300">
            <tr height="45">
                <td class="pad_5 profile_label" width="160"><%= marker.label :waterline_distance %></td>
                <td class="pad_5 profile_label"><%= marker.text_field :waterline_distance, id: "formbox_width" %><br/></td>
            </tr>
        </table>    
    <% end %>
<br>
    <%= f.submit "Submit", id: "form_btn" %>

<% end %>
</div>
