<div id="location_card">
    <h1 class="h1_white">CREATE A NEW LOCATION</h1>
    <%= form_for @location do |f| %> 
    <table width="500">
        <tr height="45">
            <td class="pad_5 profile_label"><%= f.label :country %></td>
            <td class="pad_5 profile_label" ><%= f.collection_select :country, Location.countries, :itself, :itself %></td> 
            <!-- Location.countries to a instance variable -->
        </tr>
        <tr height="45">
            <td class="pad_5 profile_label"><%= f.label :zipcode %></td>
            <td class="pad_5 profile_label"><%= f.text_field :zipcode, id: "formbox_width" %></td>
        </tr>
        <tr height="45">
            <td class="pad_5 profile_label"><%= f.label :bio %></td>
            <td class="pad_5 profile_label"><%= f.text_field :bio, id: "formbox_width" %></td>
        </tr>
    </table>
    <%= f.fields_for :markers do |marker| %>
    <table width="395">
        <tr height="45">
            <td class="pad_5 profile_label"><%= marker.label :waterline_distance %></td>
            <td class="pad_5 profile_label"><%= marker.number_field :waterline_distance, id: "formbox_width" %><br/></td>
        </tr>
    </table>
    <% end %>
    <br>
    <%= f.submit "Submit", id: "form_btn" %>

<% end %>

</div>
