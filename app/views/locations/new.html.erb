<%= form_for @location do |f| %> 
    <%= f.label :country %>
    <%= f.text_field :country %> 

    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :zipcode %>
    <%= f.text_field :zipcode %>

    <%= f.label :bio %>
    <%= f.text_field :bio %>
<br>
<br>
    <%= f.fields_for :markers do |marker| %>
        <%= marker.label :waterline_distance %><br>
        <%= marker.text_field :waterline_distance %><br/>
    <% end %>
<br>
<br>
    <%= f.submit %>

<% end %>

